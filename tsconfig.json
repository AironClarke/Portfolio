{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts", // This will include all TypeScript files in the project
    "**/*.tsx", // This will include all TSX files in the project
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    ".eslintrc.js",
    ".prettierignore"
  ],
  "exclude": ["node_modules"]
}
